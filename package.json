{
    "name": "musicservice",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "local": "ts-node server.ts",
        "dev1": "ts-node-dev --respawn --pretty --transpile-only ./src/server.ts",
        "start": "node build/index.js",
        "dev": "nodemon --exec 'ts-node' ./src/server.ts",
        "clean": "rm -rf build",
        "build": "npm run-script clean && tsc",
        "build_start": "npm run-script build && npm run-script start",
        "test1": "NODE_ENV=test mocha -r ts-node/register tests/** --timeout 10000 --exit",
        "watch": "NODE_ENV=test nyc --reporter=text mocha -w --check-leaks -r ts-node/register -r tsconfig-paths/register src/test/**/*.spec.ts",
        "test2": "NODE_ENV=test mocha --check-leaks -r ts-node/register -r tsconfig-paths/register \"src/test/**/*.spec.ts\"",
        "lint:eslint": "./node_modules/.bin/eslint --ignore-path .eslintignore -- .",
        "lint:eslint:fix": "./node_modules/.bin/eslint --ignore-path .eslintignore --fix -- .",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "lint-staged": {
        "*.{js,ts}": [
            "npm run lint:eslint:fix",
            "git add --force"
        ],
        "*.json": [
            "prettier --write",
            "git add --force"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "keywords": [],
    "author": "Jeff",
    "license": "ISC",
    "dependencies": {
        "assert": "^2.0.0",
        "axios": "^0.21.1",
        "chai": "^4.3.4",
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.17.1",
        "express-rate-limit": "^5.3.0",
        "express-validation": "^3.0.6",
        "express-validator": "^6.12.1",
        "faker": "^5.5.3",
        "jest": "^28.1.0",
        "jest-extended": "^2.0.0",
        "moxios": "^0.4.0",
        "nyc": "^15.1.0",
        "random-words": "^1.1.1",
        "redis": "^3.1.2",
        "sinon": "^11.1.2",
        "supertest": "^6.1.4",
        "ts-node-dev": "^1.1.8"
    },
    "devDependencies": {
        "@types/chai": "^4.2.14",
        "@types/chai-http": "^4.2.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.11",
        "@types/express-rate-limit": "^5.1.3",
        "@types/faker": "^5.5.7",
        "@types/jest": "^27.5.1",
        "@types/jsonwebtoken": "^8.5.0",
        "@types/mocha": "^8.0.4",
        "@types/moxios": "^0.4.12",
        "@types/node": "^14.14.9",
        "@types/random-words": "^1.1.2",
        "@types/redis": "^2.8.28",
        "@types/sinon": "^10.0.2",
        "@types/supertest": "^2.0.11",
        "@types/validator": "^13.1.1",
        "@typescript-eslint/eslint-plugin": "^4.8.2",
        "@typescript-eslint/parser": "^4.8.2",
        "chai-http": "^4.3.0",
        "eslint": "^7.14.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.0",
        "lint-staged": "^10.5.1",
        "mocha": "^8.2.1",
        "nodemon": "^2.0.6",
        "prettier": "^2.2.0",
        "ts-jest": "^28.0.3",
        "ts-node": "^9.1.1",
        "typescript": "^4.2.4"
    }
}
